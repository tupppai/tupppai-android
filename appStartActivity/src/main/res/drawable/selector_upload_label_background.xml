<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_checked="true">
        <shape>
            <solid android:color="#FFEF00" />
            <corners
                android:radius="1dp"/>
        </shape>
    </item>

    <item
        android:state_checked="false">
        <shape>
            <solid android:color="#F2F2F2" />
            <corners
                android:radius="1dp"/>
        </shape>
    </item>
</selector>