<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:paddingLeft="15dp"
        android:paddingTop="18dp"
        android:paddingRight="15dp"
        android:background="@color/white"
        >

        <com.psgod.ui.widget.AvatarImageView
            android:id="@+id/item_transactions_avatar"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"

            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/item_transactions_avatar"
            android:layout_marginLeft="11dp"
            >
            <TextView
                android:id="@+id/item_transactions_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="在 小明的小教程 解锁我的一个教程"
                android:textSize="14dp"
                android:textColor="#cc000000"
                />

            <TextView
                android:id="@+id/item_transactions_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:text="2016-01-26 18:07:30"
                android:textColor="#4d000000"
                android:layout_marginTop="11dp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/item_transactions_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ 2.00"
            android:textColor="#8dc81b"
            android:textSize="18dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="19dp"
            />

    </RelativeLayout>

</LinearLayout>