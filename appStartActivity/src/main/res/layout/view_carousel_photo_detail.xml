<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout

        android:id="@+id/view_carp_photo_detail_insidescroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone">


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_carp_photo_detail_coverview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="@drawable/shape_dialog_caro">

        <RelativeLayout
            android:id="@+id/detail_cover_head"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/view_carp_photo_detail_cover_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/tag" />

            <com.psgod.ui.widget.AvatarImageView
                android:id="@+id/view_carp_photo_detail_cover_avatar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="11dp" />

            <TextView
                android:id="@+id/view_carp_photo_detail_cover_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/view_carp_photo_detail_cover_avatar"
                android:layout_marginRight="6dp"
                android:layout_toLeftOf="@+id/view_carp_photo_detail_cover_avatar"
                android:layout_toStartOf="@+id/view_carp_photo_detail_cover_avatar"
                android:text="咩咩"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/view_carp_photo_detail_cover_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/view_carp_photo_detail_cover_avatar"
                android:layout_marginRight="6dp"
                android:layout_toLeftOf="@+id/view_carp_photo_detail_cover_avatar"
                android:layout_toStartOf="@+id/view_carp_photo_detail_cover_avatar"
                android:text="10个小时"
                android:textColor="@color/color_grey_999999"
                android:textSize="10dp" />
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/view_carp_photo_detail_cover_imgarea"
            android:layout_width="match_parent"
            android:layout_height="335dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/detail_cover_head">


            <ImageView
                android:id="@+id/view_carp_photo_detail_cover_backimg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="centerCrop" />

        </FrameLayout>

        <RelativeLayout
            android:id="@+id/cover_desc_layout"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/view_carp_photo_detail_cover_imgarea">

            <org.sufficientlysecure.htmltextview.HtmlTextView
                android:id="@+id/view_carp_photo_detail_cover_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:text="好久没法作品了"
                android:lines="1"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/cover_share_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/ic_share" />

            <TextView
                android:id="@+id/view_carp_photo_detail_cover_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/cover_share_img"
                android:layout_marginLeft="-4dp"
                android:layout_toEndOf="@+id/cover_share_img"
                android:layout_toRightOf="@+id/cover_share_img"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="13"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/cover_comment_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/view_carp_photo_detail_cover_share"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@+id/view_carp_photo_detail_cover_share"
                android:layout_toRightOf="@+id/view_carp_photo_detail_cover_share"
                android:src="@mipmap/ic_comment" />

            <TextView
                android:id="@+id/view_carp_photo_detail_cover_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/cover_comment_img"
                android:layout_marginLeft="-4dp"
                android:layout_toEndOf="@+id/cover_comment_img"
                android:layout_toRightOf="@+id/cover_comment_img"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="10"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/view_carp_photo_detail_cover_bang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="15dp"
                android:src="@mipmap/btn_bang"
                android:visibility="visible" />

            <com.psgod.ui.view.LikeView
                android:id="@+id/view_carp_photo_detail_cover_like"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">
            </com.psgod.ui.view.LikeView>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
