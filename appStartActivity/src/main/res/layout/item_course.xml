<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/item_course_img"
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:scaleType="fitXY"
        />


    <RelativeLayout
        android:id="@+id/item_course_content_area"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:layout_below="@+id/item_course_img"
        android:background="@color/white">

        <TextView
            android:id="@+id/item_course_content_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="15dp"
            android:layout_toLeftOf="@+id/item_course_content_avatar_name"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#cc000000"
            android:textSize="19dp" />

        <LinearLayout
            android:id="@+id/item_course_content_countarea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_course_content_title"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_course_like" />

            <TextView
                android:id="@+id/item_course_content_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textColor="#4c000000"
                android:textSize="12dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.5dp"
                android:src="@drawable/shape_point_5" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.5dp"
                android:src="@mipmap/ic_course_view" />

            <TextView
                android:id="@+id/item_course_content_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textColor="#4c000000"
                android:textSize="12dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.5dp"
                android:src="@drawable/shape_point_5" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.5dp"
                android:src="@mipmap/ic_course_image" />

            <TextView
                android:id="@+id/item_course_content_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textColor="#4c000000"
                android:textSize="12dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/item_course_content_avatar_name"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="19.5dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#4c000000"
            android:textSize="12dp" />

    </RelativeLayout>

    <com.psgod.ui.view.CircleImageView
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_above="@id/item_course_content_area"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="-12dp"
        android:layout_marginRight="11.5dp"
        android:src="@color/white" />

    <com.psgod.ui.widget.AvatarImageView
        android:id="@+id/item_course_avatar"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_above="@id/item_course_content_area"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="-9.5dp"
        android:layout_marginRight="14dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#16000000"
        android:layout_below="@+id/item_course_content_area"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="8.5dp"
        android:background="#f7f7f7"
        android:layout_marginTop="1.5dp"
        android:layout_below="@+id/item_course_content_area"
        />

</RelativeLayout>