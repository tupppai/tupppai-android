<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/header_recentpage_act_img"
        android:layout_width="match_parent"
        android:layout_height="224dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/recent_page_act_pic" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="62dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我要创作"
            android:id="@+id/header_recentpage_act_txt"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:drawableLeft="@mipmap/recent_page_act_pencil"
            android:drawablePadding="7dp"
            android:background="@drawable/shape_btn_act"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F7F7F7" />




</LinearLayout>
