<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/selector_notification_btn_bg">

    <com.pires.wesee.ui.widget.AvatarImageView
        android:id="@+id/item_notification_comment_list_avatar_imgview"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_alignParentLeft="true" 
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        />

    <ImageView
        android:id="@+id/item_notification_comment_list_iv"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_alignTop="@id/item_notification_comment_list_avatar_imgview"
        android:layout_alignParentRight="true"
       	android:layout_marginRight="16dp"
        android:scaleType="center" />

    <TextView
        android:id="@+id/item_notification_comment_list_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_notification_comment_list_avatar_imgview"
        android:layout_alignTop="@id/item_notification_comment_list_avatar_imgview"
        android:textColor="#343434"
        android:textSize="15dp" 
        android:includeFontPadding="false"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/item_notification_comment_list_name_tv"
        android:layout_toRightOf="@id/item_notification_comment_list_name_tv"
        android:layout_marginLeft="6dp"
        android:text="回复你"
        android:textColor="#838383"
        android:textSize="15dp" 
        android:includeFontPadding="false"
        />

    <TextView
        android:id="@+id/item_notification_comment_list_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_notification_comment_list_name_tv"
        android:layout_below="@id/item_notification_comment_list_name_tv"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/item_notification_comment_list_iv"
        android:layout_marginRight="16dp"
        android:maxLines="1"
        android:textColor="#585858"
        android:textSize="14dp"
        android:includeFontPadding="false" />

    <TextView
        android:id="@+id/item_notification_comment_list_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_notification_comment_list_name_tv"
        android:layout_below="@id/item_notification_comment_list_content_tv"
        android:layout_marginTop="20dp"
        android:paddingBottom="14dp"
        android:textColor="#BBB8BB"
        android:textSize="10dp" 
        android:includeFontPadding="false" />
	
	<View 
		android:layout_width="match_parent"
		android:layout_height="0.5dp"
		android:background="#E5E5E5"
		android:layout_below="@id/item_notification_comment_list_time_tv" />
</RelativeLayout>