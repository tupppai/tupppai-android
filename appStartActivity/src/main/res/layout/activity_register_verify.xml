<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="#FFFFFF"
	android:clipToPadding="true"
	android:fitsSystemWindows="true">
    
	<TextView
  	    android:id="@+id/actionbar"
  	    android:layout_width="match_parent"
  	    android:layout_height="wrap_content"
  	    android:layout_marginTop="@dimen/new_actionbar_margin_top"
  	    android:paddingLeft="14dp"
  	    android:drawableLeft="@drawable/ic_back_gray"
  	    android:drawablePadding="16dp"
  	    android:text="填写验证码"
  	    android:textColor="#000000"
  	    android:textSize="16dp" />
	
	<ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
            <EditText
                android:id="@+id/phone_vertify_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="88dp"
                android:layout_marginLeft="55dp"
                android:background="@null"
                android:textColorHint="#66000000"
                android:textColor="#000000"
                android:textSize="15dp"
                android:hint="请输入验证码"
                android:inputType="number" />
            
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#B5C0C8"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="52dp" />

		    <Button
		        android:id="@+id/resend_verify_btn"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="right"
		        android:gravity="center"
		        android:layout_marginTop="14dp"
		        android:layout_marginLeft="9dp"
		        android:layout_marginRight="52dp"
		        android:background= "@null"
		        android:textSize="14dp"
		        android:textColor="#BDC7CE" />
		    
		    <ImageView
			    android:id="@+id/activity_register_verify_next_btn"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			   	android:layout_gravity="center_horizontal"
		        android:src="@drawable/btn_ok"
		        android:layout_marginTop="75dp" />
	
    	</LinearLayout>
    </ScrollView>
</LinearLayout>
