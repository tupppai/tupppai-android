<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="73dp">

    <com.psgod.ui.widget.AvatarImageView
        android:id="@+id/avatar_iamge"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="17dp"
        android:src="@drawable/head_portrait"/>

    <TextView
        android:id="@+id/nickname_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/avatar_iamge"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@id/avatar_iamge"
        android:layout_marginTop="3dp"
        android:text="吾先生"
        android:textColor="#000000"
        android:textSize="14dp"/>

    <TextView
        android:id="@+id/time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/nickname_text"
        android:layout_alignParentRight="true"
        android:layout_marginRight="17dp"
        android:text="1小时前"
        android:textColor="#66000000"
        android:textSize="11dp"/>

    <TextView
        android:id="@+id/comment_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/nickname_text"
        android:layout_marginRight="17dp"
        android:layout_below="@id/nickname_text"
        android:layout_marginTop="10dp"
        android:text="哈哈哈，好有趣"
        android:textColor="#99000000"
        android:textSize="14dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/comment_content_tv"
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@id/nickname_text"
        android:layout_marginRight="17dp"
        android:background="#1A000000" />

</RelativeLayout>