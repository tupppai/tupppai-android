<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wesee="http://schemas.android.com/apk/res/com.pires.wesee"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#74C3FF" 
    android:clipToPadding="true"
	android:fitsSystemWindows="true">
    
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:background="#FFFFFF"
    	android:orientation="vertical">
    	
		<com.pires.wesee.ui.widget.ActionBar
	        android:id="@+id/actionbar"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/actionbar_height"
			wesee:rightBtnVisibility="gone"
	        wesee:title="账号绑定" />
		
		<ScrollView
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content" >
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical">
		
				<TextView 
				    android:layout_width="match_parent"
				    android:layout_height="50dp"
				    android:background="#F3F3F3"
				    android:paddingLeft="16dp"
				    android:gravity="center_vertical"
				    android:textColor="#637685"
				    android:textSize="13dp"
				    android:text="社交账号绑定"
				    />
				
				<RelativeLayout
				    android:layout_width="match_parent"
				    android:layout_height="65dp"
				    android:gravity="center_vertical"
				    android:paddingLeft="17dp"
				    android:paddingRight="16dp"
				    android:background="#FFFFFF" >
				    <TextView 
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:drawableLeft="@drawable/ic_weibo_setting"
				        android:drawablePadding="33dp"
				        android:text="新浪微博"
				        android:textColor="#585858"
				        android:textSize="14dp"
				        />
				    
				    <ToggleButton
				        android:id="@+id/account_binding_weibo_toggle_btn"
			            style="@style/setting_notification_btn_toggle" />
				</RelativeLayout>
				
				<View 
				    android:layout_width="match_parent"
				    android:layout_height="0.5dp"
				    android:background="#E5E5E5"
				    />
				
				<RelativeLayout
				    android:layout_width="match_parent"
				    android:layout_height="65dp"
				    android:gravity="center_vertical"
				    android:paddingLeft="17dp"
				    android:paddingRight="16dp"
				    android:background="#FFFFFF" >
				    <TextView 
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:drawableLeft="@drawable/wechat_setting"
				        android:drawablePadding="33dp"
				        android:text="微信"
				        android:textColor="#585858"
				        android:textSize="14dp"
				        />
				    
				    <ToggleButton
				        android:id="@+id/account_binding_wechat_toggle_btn"
			            style="@style/setting_notification_btn_toggle" />
				</RelativeLayout>
				
				<TextView 
				    android:layout_width="match_parent"
				    android:layout_height="50dp"
				    android:background="#F3F3F3"
				    android:paddingLeft="16dp"
				    android:gravity="center_vertical"
				    android:textColor="#637685"
				    android:textSize="13dp"
				    android:text="手机号绑定"
				    />
				
				<RelativeLayout
				    android:layout_width="match_parent"
				    android:layout_height="65dp"
				    android:gravity="center_vertical"
				    android:paddingLeft="17dp"
				    android:background="#FFFFFF" >
				    <TextView 
				        android:id="@+id/account_binding_phone_num"
				        android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#585858"
						android:textSize="14dp"
				        />
				</RelativeLayout>
				
				<View 
				    android:layout_width="match_parent"
				    android:layout_height="0.5dp"
				    android:background="#E5E5E5"
				    />
		
			</LinearLayout>
		</ScrollView>
	</LinearLayout>
</RelativeLayout>
