<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/selector_notification_btn_bg"
    >

    <com.psgod.ui.widget.AvatarImageView
        android:id="@+id/item_like_list_avatar"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_alignParentLeft="true" 
        android:layout_marginTop="12dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="13dp"
        android:src="@drawable/head_portrait"
        />

    <TextView
        android:id="@+id/item_like_list_nametv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_like_list_avatar"
        android:layout_alignTop="@id/item_like_list_avatar"
        android:text="水英"
        android:textColor="#000000"
        android:textSize="13dp" 
        android:includeFontPadding="false"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/item_like_list_nametv"
        android:layout_toRightOf="@id/item_like_list_nametv"
        android:layout_marginLeft="9dp"
        android:text="赞了"
        android:textColor="#7F000000"
        android:textSize="13dp" 
        android:includeFontPadding="false"
        android:drawableRight="@drawable/ic_like_hit"
        android:drawablePadding="5dp"
        />
	
    <TextView
        android:id="@+id/item_like_list_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_like_list_nametv"
        android:layout_below="@id/item_like_list_nametv"
        android:layout_marginTop="6dp"
        android:text="9月1日"
        android:textColor="#7F000000"
        android:textSize="10dp" 
        android:includeFontPadding="false" />
    
    <ImageView 
        android:id="@+id/item_like_list_image"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true" 
        android:layout_marginRight="14dp"
        android:layout_centerVertical="true" />
    
	<View 
		android:layout_width="match_parent"
		android:layout_height="0.5dp"
		android:background="#1A000000"
		android:layout_marginLeft="55dp"
		android:layout_marginRight="13dp"
		android:layout_below="@id/item_like_list_time_tv"
		android:layout_marginTop="13dp" />
</RelativeLayout>