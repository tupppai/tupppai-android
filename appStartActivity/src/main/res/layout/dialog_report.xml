<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
        android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_dialog_corner"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingTop="25dp" >

        <Button
            android:id="@+id/dialog_report_porn"
            style="@style/action_sheet_dialog_blue_btn"
            android:text="色情、淫秽或低俗内容" />

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="#FFFFFF" />

        <Button
            android:id="@+id/dialog_report_ad"
            style="@style/action_sheet_dialog_blue_btn"
            android:text="广告或垃圾消息" />

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="#FFFFFF" />

        <Button
            android:id="@+id/dialog_report_law"
            style="@style/action_sheet_dialog_blue_btn"
            android:text="违反法律法规的内容" />

        <View
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:background="#FFFFFF" />

        <Button
            android:id="@+id/dialog_report_cancel"
            style="@style/action_sheet_dialog_gray_btn_new"
            android:text="取消" />

        <View
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:background="#FFFFFF" />
    </LinearLayout>

</LinearLayout>