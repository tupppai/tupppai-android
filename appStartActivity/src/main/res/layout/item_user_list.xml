<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="#FFFFFF">

    <com.pires.wesee.ui.widget.AvatarImageView
        android:id="@+id/item_user_list_avatar_imgview"
        android:layout_width="@dimen/user_avatar_size"
        android:layout_height="@dimen/user_avatar_size"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="17dp" />

    <TextView
        android:id="@+id/item_user_list_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/item_user_list_avatar_imgview"
        android:layout_marginLeft="9dp"
        android:layout_toRightOf="@id/item_user_list_avatar_imgview"
        android:includeFontPadding="false"
        android:textColor="#000000"
        android:textSize="15dp" />

    <com.pires.wesee.ui.widget.FollowImage
        android:id="@+id/item_user_list_follow_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:padding="10dp"
        android:scaleType="center"
        android:gravity="center"
        android:textSize="10dp" />

    <LinearLayout
        android:id="@+id/user_count_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_user_list_name_textview"
        android:layout_below="@id/item_user_list_name_textview"
        android:layout_marginTop="12dp"
        android:layout_toLeftOf="@id/item_user_list_follow_btn"
        android:layout_toRightOf="@id/item_user_list_avatar_imgview"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_user_list_follower_num_tag"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="#8D8D8D"
            android:textSize="12dp" />

        <Button
            android:id="@+id/item_comment_list_point"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_follow_item_point" />

        <TextView
            android:id="@+id/item_user_list_ask_num_tag"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="#8D8D8D"
            android:textSize="12dp" />

        <Button
            android:id="@+id/item_comment_list_point"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_follow_item_point" />

        <TextView
            android:id="@+id/item_user_list_work_num_tag"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="#8D8D8D"
            android:textSize="12dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/user_count_layout"
        android:layout_marginTop="16dp"
        android:background="#1A000000" />

</RelativeLayout>