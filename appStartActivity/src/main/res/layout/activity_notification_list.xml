<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wesee="http://schemas.android.com/apk/res/com.pires.wesee"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" 
    android:clipToPadding="true"
	android:fitsSystemWindows="true">
	
    <RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:background="#F8F8F8" >
        
	    <com.pires.wesee.ui.widget.ActionBar
	        android:id="@+id/actionbar"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/actionbar_height"
	        wesee:rightBtnText="清除" />
	
	    <com.pires.wesee.ui.view.PullToRefreshSwipeMenuListView
	        android:id="@+id/activity_notification_comment_list_listview"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_below="@id/actionbar"
	        android:groupIndicator="@null"
	        android:divider="@null"
	        />
	   
	    <LinearLayout
	        android:id="@+id/activity_notification_comment_list_empty_view"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:gravity="center_horizontal|top"
	        android:orientation="vertical"
	        android:layout_below="@id/actionbar"
	        android:visibility="gone" >
	
	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="60dp"
	            android:background="@drawable/ic_gui" />
	        
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="35dp"
	            android:text="这里空空如也！"
	            android:textColor="#8D8D8D"
	            android:textSize="15dp" />
	    </LinearLayout>
    </RelativeLayout>

</RelativeLayout>