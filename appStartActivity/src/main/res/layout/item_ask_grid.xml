<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >
       
    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" >
	    
	    <ImageView
	        android:id="@+id/item_ask_imageview"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:scaleType="centerCrop" />
		
		<TextView
	        android:id="@+id/item_ask_count_tag"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:layout_alignLeft="@id/item_ask_imageview"
			android:layout_alignBottom="@id/item_ask_imageview"
			android:layout_marginLeft="8dp"
			android:layout_marginBottom="7dp"
			android:drawableLeft="@drawable/ic_photo"
			android:drawablePadding="5dp"
			android:text="111"
	        android:textColor="#FFFFFF"
	        android:gravity="center"
			android:textSize="9.5dp"
			android:visibility="gone" />
		
		<TextView 
	 	    android:id="@+id/item_like_count_text"
	 	    android:layout_width="wrap_content"
	 	    android:layout_height="wrap_content"
	 	    android:layout_alignParentBottom="true"
	 	    android:layout_alignParentRight="true"
	 	    android:layout_marginRight="10dp"
	 	    android:layout_marginBottom="8dp"
	 	    android:drawableLeft="@drawable/ic_like_white"
	 	    android:drawablePadding="3dp"
	 	    android:text="123"
	 	    android:textSize="11dp"
	 	    android:textColor="#FFFFFF"
	 	    android:visibility="gone" />
		
	</RelativeLayout>
</LinearLayout>


