<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wesee="http://schemas.android.com/apk/res/com.pires.wesee"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <com.pires.wesee.ui.widget.ActionBar
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        wesee:rightBtnVisibility="gone"
        wesee:title="账号绑定" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#F7F7F7"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="登录账号"
        android:textColor="#000000"
        android:textSize="13dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:paddingLeft="17dp" >

        <TextView
            android:id="@+id/account_binding_phone_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号 13510226835"
            android:textColor="#7F000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/account_binding_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="已绑定"
            android:textColor="#7F000000"
            android:textSize="14dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="15dp"
        android:background="#1A000000" />

    <TextView
        android:id="@+id/activity_edit_passwd_btn"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/selector_userpage_btn_bg"
        android:drawableRight="@drawable/ic_arrow_setting"
        android:text="修改密码"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:textSize="15dp"
        android:textColor="#000000"
        android:paddingRight="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F3F3F3"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="社交账号绑定"
        android:textColor="#000000"
        android:textSize="13dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="#FFFFFF"
        android:paddingLeft="17dp"
        android:paddingRight="15dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_weibo_setting"
            android:drawablePadding="20dp"
            android:text="新浪微博"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="14dp" />

        <ToggleButton
            android:id="@+id/account_binding_weibo_toggle_btn"
            style="@style/setting_notification_btn_toggle"
            android:layout_centerVertical="true" />
        
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#1A000000"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="15dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="#FFFFFF"
        android:paddingLeft="17dp"
        android:paddingRight="15dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_wechat_setting"
            android:drawablePadding="20dp"
            android:text="微信"
            android:textColor="#000000"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical" />

        <ToggleButton
            android:id="@+id/account_binding_wechat_toggle_btn"
            style="@style/setting_notification_btn_toggle"
            android:layout_centerVertical="true" />
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#1A000000"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="15dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="#FFFFFF"
        android:paddingLeft="17dp"
        android:paddingRight="15dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_qq_setting"
            android:drawablePadding="24dp"
            android:text="QQ"
            android:textColor="#000000"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical" />

        <ToggleButton
            android:id="@+id/account_binding_qq_toggle_btn"
            style="@style/setting_notification_btn_toggle"
            android:layout_centerVertical="true" />
        
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#1A000000"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="15dp" />

</LinearLayout>