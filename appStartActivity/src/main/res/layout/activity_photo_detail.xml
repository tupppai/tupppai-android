<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wesee="http://schemas.android.com/apk/res/com.pires.wesee"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#74C3FF" 
    android:clipToPadding="true"
	android:fitsSystemWindows="true">
	
    <RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:background="#F8F8F8" >
    	
	    <com.pires.wesee.ui.widget.ActionBar
	        android:id="@+id/actionbar"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/actionbar_height"
	        wesee:rightBtnVisibility="gone"
	        wesee:title="详情" />
	
	    <com.handmark.pulltorefresh.library.PullToRefreshExpandableListView
	        android:id="@+id/activity_photo_detail_expandable_list"
	  	    android:layout_width="match_parent"
	  	    android:groupIndicator="@null"
	  	    android:divider="@null"
		    android:layout_height="match_parent"
		    android:layout_below="@id/actionbar" />
    </RelativeLayout>

</RelativeLayout>