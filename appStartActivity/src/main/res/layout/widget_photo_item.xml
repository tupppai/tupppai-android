                    android:textColor="#4A4A4A"
                    android:textSize="12dp" />
            </RelativeLayout>

            <!-- 单条作品类型操作栏 -->

            <RelativeLayout
                android:id="@+id/single_photoitem_reply"
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:layout_marginLeft="10dp"
                android:visibility="gone" >

                <ImageView
