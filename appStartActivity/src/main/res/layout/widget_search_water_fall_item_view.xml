<?xml version="1.0" encoding="utf-8"?>
<com.psgod.ui.view.SearchWaterFallItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/news_item_bg">

    <RelativeLayout
        android:id="@+id/user_info_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF" >

        <com.psgod.ui.widget.AvatarImageView
            android:id="@+id/item_avatar_imageview"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/nickname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/item_avatar_imageview"
            android:text="不长脸人"
            android:textColor="#ce000000"
            android:textSize="13dp" />

        <ImageView
            android:id="@+id/type_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp" />
    </RelativeLayout>

    <!-- <com.psgod.ui.view.ScaleImageView -->

    <com.dodowaterfall.widget.ScaleImageView
        android:id="@+id/inprogress_ask_item_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_info_layout"
        android:src="@null" />

    <RelativeLayout
        android:id="@+id/desc_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inprogress_ask_item_image"
        android:background="#FFFFFF" >

        <TextView
            android:id="@+id/ask_desc_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="7dp"
            android:maxLines="2"
            android:paddingBottom="19dp"
            android:text="这里是求P描述,最多显示两行，最多显示两行，最多显示。。。"
            android:textColor="#000000"
            android:textSize="14dp" />
    </RelativeLayout>

</com.psgod.ui.view.SearchWaterFallItemView>