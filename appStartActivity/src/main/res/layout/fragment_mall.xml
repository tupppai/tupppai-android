<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    tools:context="com.pires.wesee.ui.fragment.MallFragment">


    <RelativeLayout
        android:id="@+id/fragment_mall_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        android:layout_alignParentLeft="true"
        android:background="@color/white"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/webview_back"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_back_btn"
            android:textSize="16dp"
            android:scaleType="center"
            android:layout_marginLeft="10dp"
            android:visibility="gone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/webview_title"
            android:layout_centerVertical="true"
            android:textSize="14dp"
            android:layout_marginLeft="90dp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <WebView
        android:id="@+id/fragment_mall_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/fragment_mall_title"
        android:divider="@null" />


</RelativeLayout>
