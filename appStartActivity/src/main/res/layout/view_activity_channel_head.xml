<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:paddingBottom="10dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:paddingBottom="15dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/activity_channal_head_img1"
            android:layout_width="2dp"
            android:layout_height="16dp"
            android:layout_alignParentLeft="true"
            android:background="#FFEF00" />

        <TextView
            android:id="@+id/activity_channal_head_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/activity_channal_head_img1"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:text="求P区"
            android:textColor="#000000"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/activity_channal_head_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:text="全部 》"
            android:textColor="@color/color_7f000000"
            android:textSize="12dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/activity_channal_head_list"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_below="@+id/activity_channal_head_txt1"
            android:layout_marginTop="10dp" />
    </RelativeLayout>
</RelativeLayout>