<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.psgod.ui.widget.AvatarImage
        android:id="@+id/avatar_imgview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/head_portrait"/>

    <ImageView
        android:id="@+id/avatar_vip_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/avatar_imgview"
        android:layout_alignBottom="@+id/avatar_imgview"
        android:layout_marginRight="-5dp"
        android:visibility="gone"
        android:src="@mipmap/icon_v"
 />

</RelativeLayout>