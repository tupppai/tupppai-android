<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/item_select_image_imagearea"
        android:layout_width="135dp"
        android:layout_height="202dp"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/item_select_image_imagearea_image"
            android:layout_width="135dp"
            android:layout_height="202dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/item_select_image_imagearea_checkmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            android:layout_marginTop="6dp"
            android:src="@mipmap/zuopin_ic_sel_nor" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_select_image_bangarea"
        android:layout_width="135dp"
        android:layout_height="202dp"
        android:background="@color/white"
        android:visibility="invisible"
        android:padding="6dp">

        <RelativeLayout
            android:id="@+id/item_select_image_bangarea_title"
            android:layout_width="match_parent"
            android:layout_height="17dp">

            <com.psgod.ui.view.CircleImageView
                android:id="@+id/item_select_image_bangarea_avatar"
                android:layout_width="17dp"
                android:layout_height="17dp" />

            <TextView
                android:id="@+id/item_select_image_bangarea_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/item_select_image_bangarea_avatar"
                android:textColor="#66000000"
                android:textSize="11dp" />

            <ImageView
                android:id="@+id/item_select_image_bangarea_checkmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/zuopin_ic_sel_nor" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/item_select_image_bangarea_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/item_select_image_bangarea_desc"
            android:layout_below="@+id/item_select_image_bangarea_title"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp" />

        <TextView
            android:id="@+id/item_select_image_bangarea_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#66000000"
            android:textSize="11dp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="5dp"
        android:layout_height="202dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/item_select_image_imagearea"
        android:src="@color/transparent" />
</RelativeLayout>