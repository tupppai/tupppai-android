<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_dialog_corner"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="40dp"
            android:orientation="horizontal" >
            
            <Button 
                android:id="@+id/dialog_recommend_friends_sina"
                style="@style/share_more_dialog_btn_new"
                android:drawableTop="@drawable/ic_weibo_new"
                android:text="新浪微博"
                />
			
            <Button 
                android:id="@+id/dialog_recommend_friends_qzone"
                style="@style/share_more_dialog_btn_new"
                android:drawableTop="@drawable/ic_qzone"
                android:text="QQ空间 "
                />
            
            <Button
                android:id="@+id/dialog_recommend_friends_moments"
                style="@style/share_more_dialog_btn_new"
                android:drawableTop="@drawable/ic_wechat_new"
                android:drawablePadding="8dp"
                android:text="朋友圈" />
            
            <Button
                android:id="@+id/dialog_recommend_friends_wechat"
                style="@style/share_more_dialog_btn_new"
                android:drawableTop="@drawable/ic_weixin_new"
                android:text="微信"  />
			
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/dialog_recommend_friends_qq_friend"
                style="@style/share_more_dialog_btn_new"
                android:drawableTop="@drawable/ic_qq_new"
                android:text="QQ好友" />
			
            <Button
                style="@style/share_more_dialog_btn_new" />
            
            <Button
       			style="@style/share_more_dialog_btn_new" />
            
            <Button
                style="@style/share_more_dialog_btn_new" />
        </LinearLayout>
		
        <Button
            android:id="@+id/dialog_recommend_friends_cancel"
            style="@style/share_more_dialog_grey_btn_new"
            android:text="取消" />
    </LinearLayout>

</LinearLayout>