<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/selector_notification_btn_bg">

    <com.pires.wesee.ui.widget.AvatarImageView
        android:id="@+id/item_message_list_avatar"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_alignParentLeft="true" 
        android:layout_marginTop="12dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="13dp"
        android:src="@drawable/user_photo"
        />

    <TextView
        android:id="@+id/item_message_list_nametv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_message_list_avatar"
        android:layout_alignTop="@id/item_message_list_avatar"
        android:text="图派"
        android:textColor="#000000"
        android:textSize="13dp" 
        android:includeFontPadding="false"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/item_message_list_nametv"
        android:layout_toRightOf="@id/item_message_list_nametv"
        android:layout_marginLeft="9dp"
        android:text="系统通知"
        android:textColor="#7F000000"
        android:textSize="15dp" 
        android:includeFontPadding="false"
        />
	
    <TextView
        android:id="@+id/item_message_list_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_message_list_nametv"
        android:layout_below="@id/item_message_list_nametv"
        android:layout_marginTop="6dp"
        android:text="9月1日"
        android:textColor="#7F000000"
        android:textSize="10dp" 
        android:includeFontPadding="false" />
    
    <TextView
        android:id="@+id/item_message_list_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_message_list_time_tv"
        android:layout_below="@id/item_message_list_time_tv"
        android:layout_marginTop="13dp"
        android:layout_marginRight="16dp"
        android:maxLines="1"
        android:text="图派2.1版本上线喽"
        android:textColor="#000000"
        android:textSize="14dp"
        android:includeFontPadding="false" />
	
	<View 
		android:layout_width="match_parent"
		android:layout_height="0.5dp"
		android:layout_marginLeft="55dp"
		android:layout_marginRight="13dp"
		android:background="#1A000000"
		android:layout_below="@id/item_message_list_content_tv"
		android:layout_marginTop="13dp" />
</RelativeLayout>