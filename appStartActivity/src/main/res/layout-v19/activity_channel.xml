<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/activity_channal_parent"
    >


    <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="22dp"-->
        <!--android:id="@+id/activity_channal_title_thumb"-->
        <!--android:background="@color/white"-->
        <!--/>-->

    <RelativeLayout
        android:id="@+id/activity_channal_title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        android:background="@color/white">

        <TextView
            android:id="@+id/activity_channal_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="18dp" />

        <com.psgod.ui.widget.FinishView
            android:id="@+id/activity_channal_title_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:src="@drawable/selector_back_btn" />
    </RelativeLayout>


    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/activity_channal_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/activity_channal_title_layout"
        android:background="#F7F7F7" />



</RelativeLayout>
